public class Range
{

public static void main(String args[])
{
 int a[]={1,2,3,5,6,10};
 int range= 0;
    if(a[0]>a[a.length-1])
    {
     range= a[0]-a[a.length-1];
    }

    else if(a[a.length-1]>a[0]||a[0]==a[a.length-1])
    {
     range= a[a.length-1]-a[0];
    }
 System.out.println("Range of the given array is "+range);
}
}
